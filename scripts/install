#!/bin/sh
#
# Copyright 2005 Timo Hirvonen
#
# This file is licensed under the GPLv2.

flags=""
while test $# -gt 0
do
	case $1 in
		-*)
			flags="$flags $1"
			;;
		*)
			break
			;;
	esac
	shift
done

if test $# -lt 2
then
	echo "expecting at least 2 arguments"
	exit 1
fi
to="${DESTDIR}${1}"
shift
install -d -m755 "${to}"
for i in "$@"
do
	echo "INSTALL ${to}/${i}"
	install $flags "$i" "${to}"
done
