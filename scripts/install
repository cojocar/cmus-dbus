flags=""
while test $# -gt 0
do
	case $1 in
		-*)
			flags="$flags $1"
			;;
		*)
			break
			;;
	esac
	shift
done

test $# -lt 2 && exit 0

to="${DESTDIR}${1}"
shift
install -d -m755 "${to}"
for i in "$@"
do
	echo "INSTALL ${to}/${i}"
	install $flags "$i" "${to}"
done
